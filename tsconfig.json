{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./built",
        "target": "es2017",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "phaser-ce"
        ],
        "listEmittedFiles": true,
        "alwaysStrict": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".npm",
        "./src/_old",
        "./src/libs"
    ]
}