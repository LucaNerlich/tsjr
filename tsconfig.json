{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "./built",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "listEmittedFiles": true,
        "alwaysStrict": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".npm",
        "./src/_old"
    ]
}